<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/tv_fee_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/dove_gray"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_fee"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Evaporator Kw" />

    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:textColor="@color/dove_gray"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_fee_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_fee_name"
        tools:text="Rp.500.000,00" />
</androidx.constraintlayout.widget.ConstraintLayout>